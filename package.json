{
    "name": "express-backend-food-app",
    "version": "1.0.0",
    "description": "Express-Typescript-MySQL-Sequelize backend for a food delivery app",
    "main": "server.ts",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "start": "npm run build && node dist/server.js",
        "dev": "nodemon",
        "build": "tsc && tsc-alias && echo 'Build Finished! üëç'",
        "lint": "eslint --ignore-path .gitignore --ext .ts src/",
        "lint:fix": "npm run lint -- --fix",
        "migration:generate": "sequelize migration:generate --name",
        "migration": "sequelize db:migrate",
        "init:seeders": "sequelize init:seeders",
        "seed:generate": "sequelize seed:generate --name",
        "seed:all": "sequelize db:seed:all"
    },
    "author": "Ishan Hettiarachchi",
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "mysql2": "^3.14.5",
        "sequelize": "^6.37.4",
        "sequelize-typescript": "^2.1.6",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "tsconfig-paths": "^4.2.0",
        "typescript-eslint": "^8.43.0",
        "uuid": "^13.0.0",
        "winston": "^3.15.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^10.0.0",
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^22.10.5",
        "@types/pg": "^8.11.10",
        "@types/sequelize": "^4.28.20",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "@typescript-eslint/eslint-plugin": "^5.29.0",
        "@typescript-eslint/parser": "^5.29.0",
        "eslint": "^9.35.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.7.0",
        "nodemon": "^3.1.7",
        "prettier": "^2.7.1",
        "sequelize-cli": "^6.6.2",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
